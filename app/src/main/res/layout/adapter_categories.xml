<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:scaleType="fitXY"
            android:src="@drawable/shoes_wallpaper"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="160dp">

            <TextView
                android:id="@+id/adapter_categories_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کفش ها"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/adapter_categories_category_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 دسته"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/adapter_categories_item_type_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 نوع کالا"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/adapter_categories_item_unit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 واحد کالا"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/adapter_categories_delete_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>