<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kasper.android.store_manager">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".core.Core"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DashboardActivity"
            android:theme="@style/AppTheme.TransparentStatus" />
        <activity
            android:name=".activities.NotificationsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.CreateOptionsActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".activities.ListsBookActivity"
            android:theme="@style/AppTheme.TransparentStatus" />
        <activity
            android:name=".activities.FactoriesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HistoryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.BarcodeScannerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ItemCreateActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.CategoryCreateActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.CategoryPickerActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activities.CategoryDetailsActivity"
            android:theme="@style/AppTheme.TransparentStatus"/>
    </application>

</manifest>